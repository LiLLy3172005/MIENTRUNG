<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- About me section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rounded_white_card"
        android:padding="16dp"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/aboutMeLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:drawableLeft="@drawable/ic_info_pink"
            android:drawablePadding="8dp"
            android:fontFamily="@font/agbalumo"
            android:text="About me"
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="bold" />


    </LinearLayout>

    <!-- Work Experience section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rounded_white_card"
        android:padding="16dp">

        <TextView
            android:id="@+id/workExperienceLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:drawableLeft="@drawable/ic_work_pink"
            android:drawablePadding="8dp"
            android:fontFamily="@font/agbalumo"
            android:text="Work Experience"
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/philosopher_italic"
            android:lineSpacingExtra="4dp"
            android:text="• Google (2020-present)\n• Facebook (2018-2020)\n• Microsoft (2015-2018)"
            android:textColor="#555555"
            android:textSize="13sp" />
    </LinearLayout>

    <!-- Email section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rounded_white_card"
        android:padding="16dp"
        android:layout_marginTop="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:drawableLeft="@drawable/ic_email"
            android:drawablePadding="8dp"
            android:fontFamily="@font/agbalumo"
            android:text="Contact"
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/emailTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/philosopher_italic"
            android:textColor="#555555"
            android:textSize="13sp" />



    </LinearLayout>
</LinearLayout>